---
// @ts-nocheck
import LegacyLayout from "../../layouts/LegacyLayout.astro";
import LegacyHeader from "../../components/LegacyHeader.astro";
import LegacyFooter from "../../components/LegacyFooter.astro";

export async function getStaticPaths() {
  const entries = import.meta.glob("../../content/news/*.md", { eager: true });
  return Object.entries(entries).map(([path, entry]) => ({
    params: { slug: path.split("/").pop().replace(".md", "") },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { frontmatter, Content } = entry;
---
<LegacyLayout title={`${frontmatter.title} @ mpls.com`}>
  <div class="mpls-legacy">
<LegacyHeader />

    <div class="article-titlebar"><img src="/img/titlebar.gif" width="600" height="20" border="0" usemap="#titlebar"></div>

    <div class="article-container">
      <table width="600" border="1" cellpadding="12" cellspacing="0">
        <tr>
          <td>
            <div class="article-title"><font face="Verdana, Helvetica, Arial" size="4"><b>{frontmatter.title}</b></font></div>
            <div class="article-meta"><font face="Verdana, Helvetica, Arial" size="1">{frontmatter.displayDate || frontmatter.date} Â· {frontmatter.source}</font></div>
            {frontmatter.image ? (
              <div class="article-image-container">
                <img align="TOP" border="1" height="180" src={frontmatter.image} width="340">
              </div>
            ) : null}
            <p><font face="Verdana, Helvetica, Arial" size="2"><Content /></font></p>
            {frontmatter.sourceUrl ? (
              <p><font face="Verdana, Helvetica, Arial" size="1"><a href={frontmatter.sourceUrl} target="_blank" rel="noreferrer">Original source</a></font></p>
            ) : null}
            <p><font face="Verdana, Helvetica, Arial" size="1"><a href="/news/">Return to News</a></font></p>
          </td>
        </tr>
      </table>
    </div>

    <LegacyFooter />

<map name="titlebar">
      <area shape="rect" coords="554,0,599,19" href="/search/" target="_top">
      <area shape="rect" coords="498,0,552,19" href="/weather/" target="_top">
      <area shape="rect" coords="450,0,495,19" href="/sports/" target="_top">
      <area shape="rect" coords="397,0,448,19" href="/politics/" target="_top">
      <area shape="rect" coords="358,0,392,19" href="/news/" target="_top">
      <area shape="rect" coords="316,0,354,19" href="/media/" target="_top">
      <area shape="rect" coords="281,0,312,19" href="/kid/" target="_top">
      <area shape="rect" coords="220,0,278,19" href="/exposure/" target="_top">
      <area shape="rect" coords="151,0,218,19" href="/cool/" target="_top">
      <area shape="rect" coords="92,0,148,19" href="/business/" target="_top">
      <area shape="rect" coords="0,0,90,19" href="/" target="_top">
      <area shape="default" href="/">
    </map>
  </div>
</LegacyLayout>


