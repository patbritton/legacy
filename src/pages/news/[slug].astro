---
// @ts-nocheck
import LegacyLayout from "../../layouts/LegacyLayout.astro";
import LegacyHeader from "../../components/LegacyHeader.astro";
import LegacyFooter from "../../components/LegacyFooter.astro";

export async function getStaticPaths() {
  const entries = import.meta.glob("../../content/news/*.md", { eager: true });
  return Object.entries(entries).map(([path, entry]) => ({
    params: { slug: path.split("/").pop().replace(".md", "") },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { frontmatter, Content } = entry;
const description = frontmatter.description ?? frontmatter.title;
const ogImage = frontmatter.image ?? "/img/logo2-768x455.png";
---
<LegacyLayout
  title={`${frontmatter.title} @ mp.ls`}
  description={description}
  ogType="article"
  ogImage={ogImage}
>
  <div class="mpls-legacy">
<LegacyHeader showNav />

    

    <div class="article-container">
      <table class="legacy-width-600 legacy-border-1 legacy-cellpadding-12 legacy-cellspacing-0">
        <tr>
          <td>
            <div class="article-title"><span class="legacy-font legacy-font--size-4 legacy-font--face-verdana"><b>{frontmatter.title}</b></span></div>
            <div class="article-meta"><span class="legacy-font legacy-font--size-1 legacy-font--face-verdana">{frontmatter.displayDate || frontmatter.date} Â· {frontmatter.source}</span></div>
            {frontmatter.image ? (
              <div class="article-image-container">
                <img src={frontmatter.image} class="legacy-align-top legacy-border-1 legacy-height-180 legacy-width-340">
              </div>
            ) : null}
            <p><span class="legacy-font legacy-font--size-2 legacy-font--face-verdana"><Content /></span></p>
            {frontmatter.sourceUrl ? (
              <p><span class="legacy-font legacy-font--size-1 legacy-font--face-verdana"><a href={frontmatter.sourceUrl} target="_blank" rel="noreferrer">Original source</a></span></p>
            ) : null}
            <p><span class="legacy-font legacy-font--size-1 legacy-font--face-verdana"><a href="/news/">Return to News</a></span></p>
          </td>
        </tr>
      </table>
    </div>

    <LegacyFooter />
</div>
</LegacyLayout>


