  <div class="footer-content">
    <p class="footer-nav">
      <a href={`${basePath}/`}><img alt="mpls.com" src="/img/mpls.gif" class="footer-logo"></a>
      <a href={`${basePath}/order/`} class="footer-link"><br>ADVERTISE</a> |
      <a href={`${basePath}/business/`} class="footer-link">BUSINESS</a> |
      <a href={`${basePath}/cool/`} class="footer-link">COOL SPOTS</a> |
      <a href={`${basePath}/exposure/`} class="footer-link">NORTHERN EXPOSURE</a> |
      <a href={`${basePath}/kid/`} class="footer-link">KIDS</a> |
      <a href={`${basePath}/media/`} class="footer-link">MEDIA</a> |
      <a href={`${basePath}/news/`} class="footer-link">NEWS</a> |
      <a href={`${basePath}/politics/`} class="footer-link">POLITICS</a> |
      <a href={`${basePath}/sports/`} class="footer-link">SPORTS</a> |
      <a href={`${basePath}/weather/`} class="footer-link">WEATHER</a> |
