---
const { showNav = false } = Astro.props;
const basePath = Astro.url.pathname.startsWith("/legacy") ? "/legacy" : "";
---
<div class="legacy-header-container">
  <div class="legacy-header-wrapper">
    <div class="legacy-header-content">
      <div class="header-divider-top">
        <img src="/img/dividerline.gif" alt="Divider">
      </div>
      <div class="header-main">
        <div class="header-left">
          <p class="header-location">Minneapolis<br>Minnesota USA</p>
        </div>
        <div class="header-center">
          <a href={`${basePath}/`}>
            <img alt="Minneapolis, Minnesota" src="/img/logo.gif" class="header-logo">
          </a>
        </div>
        <div class="header-right">
          <p class="header-tagline">Minnesota's Home<br>On The Internet</p>
        </div>
      </div>
      <div class="header-divider-bottom">
        <img src="/img/dividerline.gif" alt="Divider">
      </div>
    </div>
    {showNav && (
      <div class="header-nav">
        <div class="titlebar">
          <a href={`${basePath}/`}>
            <img src="/img/menu-logo.jpg" alt="mp.ls" width="95" height="18">
          </a> |
          <a href={`${basePath}/business/`}>BUSINESS</a> |
          <a href={`${basePath}/cool/`}>COOL SPOTS</a> |
          <a href={`${basePath}/exposure/`}>EXPOSURE</a> |
          <a href={`${basePath}/kid/`}>KIDS</a> |
          <a href={`${basePath}/media/`}>MEDIA</a> |
          <a href={`${basePath}/news/`}>NEWS</a> |
          <a href={`${basePath}/politics/`}>POLITICS</a> |
          <a href={`${basePath}/sports/`}>SPORTS</a> |
          <a href={`${basePath}/weather/`}>WEATHER</a> |
          <a href={`${basePath}/search/`}>SEARCH</a>
        </div>
      </div>
    )}
  </div>
</div>
